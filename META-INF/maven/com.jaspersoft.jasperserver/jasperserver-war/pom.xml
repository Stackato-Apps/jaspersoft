    <description>Jasper Server War Deployment</description>
    <build>
        <finalName>jasperserver</finalName>
        <filters>
            <filter>${platform-path}/js.jdbc.properties</filter>
            <filter>${platform-path}/js.quartz.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <!-- use config collector -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <configuration>
                            <tasks>
                                <!-- define ant-contrib tasks here -->
                                <taskdef resource="net/sf/antcontrib/antcontrib.properties" classpathref="maven.plugin.classpath"/>
                                <!--pass through props to ant file -->
                                <property name="js-path" value="${js-path}"/>
                                <property name="js-pro-path" value="${js-pro-path}"/>
                                <property name="platform-path" value="${platform-path}"/>
                                <property name="target" value="${basedir}/target/jasperserver/WEB-INF"/>
                                <ant antfile="${js-path}/build-config.xml" inheritall="true" inheritrefs="true">
                                    <property name="module" value="ce.webapp"/>
                                </ant>
                                <echo>COMMENT: About to call: ant build.xml for jasperserver war</echo>
                                <ant antfile="build.xml" inheritall="true" inheritrefs="true">
                                    <target name="all"/>
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>ant-contrib</groupId>
                        <artifactId>ant-contrib</artifactId>
                        <version>1.0b3</version>
                        <exclusions>
                            <exclusion>
                                <groupId>ant</groupId>
                                <artifactId>ant</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1-beta-1</version>
                <configuration>
                    <webResources>
                        <resource>
                            <directory>src/main/webappAdditions</directory>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                    <overlays>
                        <overlay>
                            <groupId>${jpivot-groupId}</groupId>
                            <artifactId>ji-jpivot-war</artifactId>
                            <excludes>
                                <exclude>**/*.jar</exclude>
                                <exclude>**/*.jsp</exclude>
                                <exclude>**/mondrian.properties</exclude>
                            </excludes>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <excludes>
                        <exclude>**/*Test.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
